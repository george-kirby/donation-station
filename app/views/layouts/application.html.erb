<!DOCTYPE html>
<html>
  <head>
    <title>DonationStation</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <nav>
      <% if logged_in? %>
        You are logged in as <strong><%= @current_user.username %></strong>
        <%= link_to "Home", user_home_path %>
        <%= link_to "My donations (to be added)", my_donations_path %>
        <%= link_to "Add a donation", new_donation_path %>
        <%= link_to "Log out", logout_path %>  
      <% else %>
        <%= link_to "Homepage", root_path %>
        <%= link_to "Login", login_path %>
        <%= link_to "Register", register_path %>
      <% end %>
    </nav>

    <% if flash[:errors] %>
      <% flash[:errors].each do |error_message| %>
      <h3><%= error_message %></h3>
      <% end %>
    <% end %>

    <% if flash[:notices] %>
      <% flash[:notices].each do |message| %>
      <h3><%= message %></h3>
      <% end %>
    <% end %>

    <%= yield %>

    <br>
    <br>
    <br>
    <br>
    <br>
    <br>
    <br>
    <br>
    <br>
    <br>
    <br>
    <br>

    <h4>Dev stuff</h4>

    <br>
    Params: <%= params %>

    <br><br>
    <% if logged_in? %>
      Current user: <%= @current_user %> (<%= @current_user.username %>)
    <% else %>
      Current user: none
    <% end %>
  </body>
</html>
